{
  "private": true,
  "name": "wds",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "npm run clean && preact build --no-prerender",
    "serve": "preact build --no-prerender && preact serve",
    "dev": "preact watch",
    "lint": "eslint src",
    "clean": "rm -rf build",
    "test:e2e": "testcafe 'chrome --incognito' all test/e2e/*_spec.js"
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor"
  },
  "eslintIgnore": ["build/*"],
  "devDependencies": {
    "eslint": "^4.9.0",
    "eslint-config-synacor": "^2.0.2",
    "if-env": "^1.0.0",
    "preact-cli": "^2.0.1",
    "testcafe": "^0.18.6"
  },
  "dependencies": {
    "date-fns": "^1.29.0",
    "eslint-config-prettier": "^2.9.0",
    "final-form": "^3.0.0",
    "fluture": "^7.2.2",
    "mitt": "^1.1.3",
    "polished": "^1.9.0",
    "preact": "^8.2.6",
    "preact-cli-plugin-async": "^1.0.0",
    "preact-cli-plugin-styled-components": "^1.0.0",
    "preact-compat": "^3.17.0",
    "preact-router": "^2.5.7",
    "ramda": "^0.25.0",
    "react-final-form": "^2.1.1",
    "reactabular-table": "^8.12.0",
    "smitty": "^2.0.3",
    "styled-components": "^2.4.0"
  }
}
